# wybór wielkości planszy
# plansza [ilkolumn] kolumn, [ilwierszy] rzędów, numerowane od zera, słowa numerowane rzędami od 0 do ilkolumn*ilwierszy-1
print("Witaj w generatorze plansz do tajniaków!")

print ("Wciśnij enter dla standardowych wymiarów, lub wpisz liczbę wierszy:")
wejscie = input()
try:
    ilwierszy = int(wejscie)
except:
    ilwierszy = 4
    ilkolumn = 5
    agenci1 = 8
    agenci2 = 9
    killers = 1
if ilwierszy == 0:
    print ("Wpisz liczbę kolumn:")
    ilkolumn = int(input())
    print ("wpisz ilość haseł dla zespołu 1:")
    agenci1 = int(input())
    print ("wpisz ilość haseł dla zespołu 2:")
    agenci2 = int(input())
    print ("wpisz ilość zabójców")
    killers = int(input())
ilslow = ilwierszy*ilkolumn
# generator słów "słowo[numer] do zbioru slowa - odpowiednia ilość elementów od slowa0 do slowa[ilość pół - 1)
#wszystkie słowa do użycia na planszy
katalog = []
import csv
with open('slowa.csv', 'r', encoding='utf-8') as csvfile:
    reader = csv.reader(csvfile, delimiter=',')
    for row in reader:
        katalog.append(row[0])
#losowanie słów
import random
slowa = []
while len(slowa) < ilslow:
    a = random.choice(katalog)
    if a not in slowa:
        slowa.append(a)
'''    b = str(a)
    zn = ["słowo", b]
    sl = "".join(zn)
    slowa.append(sl)
    a = a + 1
slowa[0] = "pierdzący"
slowa[1] = "korzyść"
slowa[2] = "kuksaniec"
slowa[3] = "kobyła"
slowa[4] = "porządek"
slowa[5] = "konstantynopol"'''
# zmiana wszystkich słów na pisane wielkimi literami
s = 0
while s < len(slowa):
    slowa[s] = slowa[s].upper()
    s = s+ 1
# Tworzenie listy z długościami najdłuższego wyrazu w kolejnych kolumnach = szerokość kolejnych kolumn
k = 0  # numer kolumny
r = 0  # numer rzędu
lenKol = []
while k < ilkolumn:
    makss = 0  # maksymalna długość bieżąco sprawdzanej kolumny
    s = k  # numer bieżącego słowa
    r = 0 #numr rzędu
    while r < ilwierszy:
        if len(slowa[s]) > makss:
            makss = len(slowa[s])
            s = s + ilkolumn
        else:
            s = s + ilkolumn
        r = r + 1
    lenKol.append(makss)
    k = k + 1
#Rysowanie planszy
k = 0  # numer kolumny
r = 0  # numer rzędu
while r < ilwierszy+1:
    k = 0
    s = r * ilkolumn
    while k < ilkolumn:
        print("+", end="")
        lit = 0
        while lit < lenKol[k]:
            print("-", end="")
            lit = lit + 1
        k = k + 1
    print("+", end="")
    print()
    if r < ilwierszy:
        k = 0
        while k < ilkolumn:
            print("|", end="")
            print(slowa[s], end="")
            l = len(slowa[s])
            while l < lenKol[k]:
                print(" ", end="")
                l = l + 1
            k = k + 1
            s = s + 1
        print("|")
    r = r + 1
